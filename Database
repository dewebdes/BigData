CREATE DATABASE bigdata;
use bigdata;
CREATE TABLE ipz_place ( id mediumint(9) NOT NULL AUTO_INCREMENT,sid mediumint(9) NOT NULL,ownerTbl mediumint not null default 0,ownerRec mediumint not null default 0,isSingle boolean not null default 1,isExist boolean not null default 0,isNew boolean not null default 0,dname TINYTEXT NULL,dlat TINYTEXT NULL,dlng TINYTEXT NULL,dweb TEXT NULL,dbaselat TINYTEXT NULL,dbaselng TINYTEXT NULL,dinfo LONGTEXT NULL,ddate TINYTEXT NULL,PRIMARY KEY (id) ) DEFAULT CHARACTER SET utf8mb4 
COLLATE utf8mb4_unicode_ci;
CREATE TABLE ipz_script ( id mediumint(9) NOT NULL AUTO_INCREMENT,sid mediumint(9) NOT NULL,ownerTbl mediumint not null default 0,ownerRec mediumint not null default 0,isSingle boolean not null default 1,isExist boolean not null default 0,isNew boolean not null default 0,placeid TINYTEXT NULL,dieurl TEXT NULL,runstep mediumint not null default 0,runscript LONGTEXT NULL,detectscript LONGTEXT NULL,titr TINYTEXT NULL,describ TEXT NULL,lastcalldate TINYTEXT NULL,callnum mediumint not null default 0,PRIMARY KEY (id) ) DEFAULT CHARACTER SET utf8mb4 COLLATE utf8mb4_unicode_ci;
CREATE TABLE ipz_alerts ( id mediumint(9) NOT NULL AUTO_INCREMENT,sid mediumint(9) NOT NULL,ownerTbl mediumint not null default 0,ownerRec mediumint not null default 0,isSingle boolean not null default 1,isExist boolean not null default 0,isNew boolean not null default 0,placeid TINYTEXT NULL,lastupdate TINYTEXT NULL,alerton TINYTEXT NULL,alertdata LONGTEXT NULL,titr TINYTEXT NULL,PRIMARY KEY (id) ) DEFAULT CHARACTER SET utf8mb4 COLLATE utf8mb4_unicode_ci;
CREATE TABLE wp_ipz_sitemaps ( id mediumint(9) NOT NULL AUTO_INCREMENT,sid mediumint(9) NOT NULL,ownerTbl mediumint not null default 0,ownerRec mediumint not null default 0,isSingle boolean not null default 1,isExist boolean not null default 0,isNew boolean not null default 0,dcomment TEXT NULL,dresponse LONGTEXT NULL,dmimetype TINYTEXT NULL,dresponselength TINYTEXT NULL,dstatus TINYTEXT NULL,drequest LONGTEXT NULL,dextension TINYTEXT NULL,dmethod TINYTEXT NULL,dprotocol TINYTEXT NULL,dport TINYTEXT NULL,dhost TINYTEXT NULL,durl TEXT NULL,dtime TEXT NULL,PRIMARY KEY (id) ) DEFAULT CHARACTER SET utf8mb4 COLLATE utf8mb4_unicode_ci;
